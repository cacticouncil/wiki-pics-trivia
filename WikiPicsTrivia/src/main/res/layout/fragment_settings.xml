<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="@dimen/activity_margin"
    android:weightSum="1"
    tools:context="com.hokuten.wikipicstrivia.FragmentSettings">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".9"
        android:scrollbars="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_views_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="@string/menu_settings_lang"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <!-- has some hack padding to align with checkboxes -->
                <TextView
                    android:id="@+id/tvSettingsLocale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:text="en_US"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent"
                    android:enabled="false"/>

            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_views_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_music"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <CheckBox
                    android:id="@+id/cbSettingsMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:scaleX="@dimen/checkbox_scale"
                    android:scaleY="@dimen/checkbox_scale"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_views_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_sound"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <CheckBox
                    android:id="@+id/cbSettingsSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:scaleX="@dimen/checkbox_scale"
                    android:scaleY="@dimen/checkbox_scale"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_dnr"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <CheckBox
                    android:id="@+id/cbSettingsDNR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:scaleX="@dimen/checkbox_scale"
                    android:scaleY="@dimen/checkbox_scale"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_desc_bottom_margin"
                android:text="@string/menu_settings_dnr_desc"
                android:textSize="@dimen/menu_desc_text"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_learning"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <CheckBox
                    android:id="@+id/cbSettingsLearning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:scaleX="@dimen/checkbox_scale"
                    android:scaleY="@dimen/checkbox_scale"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_desc_bottom_margin"
                android:text="@string/menu_settings_learning_desc"
                android:textSize="@dimen/menu_desc_text"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_show_answer"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <CheckBox
                    android:id="@+id/cbSettingsShowAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:scaleX="@dimen/checkbox_scale"
                    android:scaleY="@dimen/checkbox_scale"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_desc_bottom_margin"
                android:text="@string/menu_settings_show_answer_desc"
                android:textSize="@dimen/menu_desc_text"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_views_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_qotd"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />

                <CheckBox
                    android:id="@+id/cbSettingsQotd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:scaleX="@dimen/checkbox_scale"
                    android:scaleY="@dimen/checkbox_scale"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btnSetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/menu_button_horizontal_pad"
                android:layout_marginBottom="@dimen/menu_views_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/menu_stat_text"
                    android:text="@string/menu_settings_qotd_set_time"/>
                <TextView
                    android:id="@+id/tvSettingsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/menu_desc_text"
                    android:text="time"/>

            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_views_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/menu_settings_reset_help"
                    android:textSize="@dimen/menu_label_text"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/btnResetHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/menu_button_horizontal_pad"
                    android:paddingRight="@dimen/menu_button_horizontal_pad"
                    android:text="@string/menu_settings_reset_help_button"
                    android:textSize="@dimen/menu_label_text"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSettingsDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:layout_gravity="bottom|right"
        android:gravity="bottom|right"
        android:text="done"
        android:textSize="@dimen/menu_button_text"
        android:textColor="@color/button"
        android:background="@android:color/transparent"
        android:soundEffectsEnabled="false" />

</LinearLayout>